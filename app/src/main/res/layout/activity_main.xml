<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">


    <LinearLayout
        android:paddingLeft="43dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/sermonsbtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/seermons"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      Sermons"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:fontFamily="casual"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/vidsbtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/vid"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      Videos"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:fontFamily="casual"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/audiobtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/audios"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      Audios"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:fontFamily="casual"/>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/eventsbtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/events"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      Events"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:fontFamily="casual"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/qoutesbtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/qoutes"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      Qoutes"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:fontFamily="casual" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bookletbtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/hymn"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      Booklet"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:fontFamily="casual"/>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/fbtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/facebook"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      Facebook"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:fontFamily="casual"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/prayerbtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/prayyyyyy"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      Prayer R"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:fontFamily="casual"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/twitterbtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/twitter"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      Twitter"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:fontFamily="casual"/>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/aboutusbtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/icooooooc"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      About Us"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:fontFamily="casual"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/classifiedsbtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/l"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      Locate"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:fontFamily="casual"/>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>